{
  "display_information": {
    "name": "RankedChoice",
    "description": "Create and manage ranked choice voting polls in Slack",
    "background_color": "#4A154B"
  },
  "features": {
    "bot_user": {
      "display_name": "RankedChoice",
      "always_online": false
    },
    "slash_commands": [
      {
        "command": "/ranked-vote",
        "description": "Start a ranked choice voting session",
        "usage_hint": "[optional description]",
        "should_escape": false,
        "url": "https://cbae-75-67-241-13.ngrok-free.app/slack/events"
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "chat:write.customize",
        "commands",
        "app_mentions:read",
        "channels:history",
        "groups:history",
        "im:history",
        "mpim:history"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "request_url": "https://cbae-75-67-241-13.ngrok-free.app/slack/events",
      "bot_events": [
        "app_mention",
        "message.channels",
        "message.groups",
        "message.im",
        "message.mpim"
      ]
    },
    "interactivity": {
      "is_enabled": true,
      "request_url": "https://cbae-75-67-241-13.ngrok-free.app/slack/events"
    }
  }
}
